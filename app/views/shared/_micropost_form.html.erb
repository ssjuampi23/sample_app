<%= form_for(@micropost) do |f|%>

	<%= render 'shared/error_messages', object: f.object%> <!--Here we are calling the partials located in the /shared location -->

	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new micropost..."%>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary"%>
	
<% end %>
